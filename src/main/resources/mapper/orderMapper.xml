<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.bit.backpackers.order.model.OrderDao">
  
  	<insert id="insertOrder">
  		INSERT INTO orders (orderCode) VALUES (#{orderCode}) 
  	</insert>
  	
  	<insert id="insertOrderItem">
  		INSERT INTO order_item (orderCode, itemCode) VALUES (#{orderCode}, #{itemCode})
  	</insert>
  	
  	<select id="selectOrder" resultType="OrderVo">
  		SELECT * FROM orders WHERE orderCode = '${orderCode}'
  	</select>
  	
  	<select id="selectOrderItem" resultType="ItemVo">
  		SELECT itemCode FROM order_item WHERE orderCode = '${orderCode}'
  	</select>
  	
  </mapper>