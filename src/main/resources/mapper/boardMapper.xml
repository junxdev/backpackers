<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.backpackers.model.BoardDao">
  <select id="boardInfo" resultType="com.bit.backpackers.model.entity.BoardVo">
    select * from board
  </select>
  <insert id="insertboard">
  insert into board (board_subject,board_content,board_hits,board_type,board_delete,board_views,board_date,board_maketime) values (#{board_subject},#{board_content},0,1,1,0,CURDATE(),CURTIME())
   </insert>
   <select id="boardDetail" resultType="com.bit.backpackers.model.entity.BoardVo">
   select * from board where board_no=#{board_no}
   </select>
</mapper>