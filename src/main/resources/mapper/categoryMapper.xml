<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.bit.backpackers.category.model.CategoryDao">
  	
  	<resultMap type="CategoryVo" id="categoryMap">
  		<id property="mainCategoryCode" column="mainCategoryCode"/>
  		<result property="mainCategoryName" column="mainCategoryName"/>
  		<collection property="subCategoryList" select="selectSubCategory" column="mainCategoryCode" javaType="ArrayList" ofType="String" />
  	</resultMap>
  	
  	<select id="selectCategoryList" resultMap="categoryMap">
  		SELECT * FROM main_category
  	</select>
  	
  	<select id="selectSubCategory" resultType="String">
  		SELECT subCategoryName FROM sub_category WHERE mainCategoryCode = #{mainCategoryCode}
  	</select>
  	
  </mapper>