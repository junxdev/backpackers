	<mapper namespace="com.bit.backpackers.mapper.memberMapper">
    
    <insert id="register">
        INSERT INTO tbl_user (
            userId
            , userPw
            , userName
            , userEmail
        ) VALUES (
            #{userId}
            , #{userPw}
            , #{userName}
            , #{userEmail}
        )
    </insert>
    
    
    <select id="login" parameterType="com.bit.backpackers.member.model.LoginDTO" resultType="com.bit.backpackers.member.model.entity.MemberVo">
    SELECT * FROM tbl_user
    WHERE userId= #{userId} and userPw= #{userPw}
</select>

